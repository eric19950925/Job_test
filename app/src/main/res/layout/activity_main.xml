<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/scan_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="scan"
        app:layout_constraintBottom_toTopOf="@+id/ble_scan_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/ble_scan_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Conn"
        app:layout_constraintBottom_toTopOf="@+id/ble_connect_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/ble_connect_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Conn Gatt"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/sentC0_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/setup_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="setup"
        app:layout_constraintBottom_toTopOf="@+id/sentD6_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/sentC0_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="send C0"
        app:layout_constraintBottom_toTopOf="@+id/setup_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/sentD6_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="send D6"
        app:layout_constraintBottom_toTopOf="@+id/sentD7_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/sentD7_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="locked"
        app:layout_constraintBottom_toTopOf="@+id/sentC7_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/sentC7_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Admin_code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/bt_connect_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:text="BT scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_my_lock"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/log_tv"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="my lock's mac address:"/>
        <TextView
            android:id="@+id/tv_my_lock_mac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="my lock's key two:"/>
        <TextView
            android:id="@+id/tv_my_lock_k2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/log_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="horizontal"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_my_lock" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_tv">

        <TextView
            android:id="@+id/log_bt_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/log_ble_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="horizontal"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>